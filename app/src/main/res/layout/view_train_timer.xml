<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    >

    <TextView
        android:id="@+id/timer_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/timer_tv_departure_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="26 oct"
        />

    <TextView
        android:id="@+id/timer_tv_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/timer_tv_departure_time"
        app:layout_constraintLeft_toRightOf="@id/timer_tv_date"
        app:layout_constraintRight_toLeftOf="@id/timer_tv_departure_station"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11:08"
        />

    <TextView
        android:id="@+id/timer_tv_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/timer_tv_departure_time"
        app:layout_constraintRight_toRightOf="@id/timer_tv_departure_time"
        app:layout_constraintTop_toBottomOf="@id/timer_tv_departure_time"
        tools:text="13:48"
        />

    <TextView
        android:id="@+id/timer_tv_departure_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/timer_tv_arrival_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ma position"
        />

    <TextView
        android:id="@+id/timer_tv_arrival_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/timer_tv_departure_station"
        app:layout_constraintRight_toRightOf="@id/timer_tv_departure_station"
        app:layout_constraintTop_toBottomOf="@id/timer_tv_departure_station"
        tools:text="Dax"
        />

</merge>